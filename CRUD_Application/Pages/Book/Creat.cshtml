@page
@model CRUD_Application.Pages.Book.CreatModel
@{
    ViewData["Title"] = "Create Book";
}

<h1>Create New Book</h1>
<hr>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Books.BookTitle" class="form-label"></label>
                <input asp-for="Books.BookTitle" class="form-control" />
                <span asp-validation-for="Books.BookTitle" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Books.BookDescription" class="form-label"></label>
                <input asp-for="Books.BookDescription" class="form-control" />
                <span asp-validation-for="Books.BookDescription" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Books.BookAuthor" class="form-label"></label>
                <input asp-for="Books.BookAuthor" class="form-control" />
                <span asp-validation-for="Books.BookAuthor" class="text-danger"></span>            
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-page="Index" class="btn btn-danger">Back to List</a> 
            </div>
        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}